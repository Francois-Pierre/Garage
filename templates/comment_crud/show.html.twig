{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ comment.Text }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ comment.Rank }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.CreatedAt ? comment.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ comment.Author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_crud_index') }}">back to list</a>

    <a href="{{ path('app_comment_crud_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comment_crud/_delete_form.html.twig') }}
{% endblock %}
