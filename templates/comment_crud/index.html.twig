{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Rank</th>
                <th>CreatedAt</th>
                <th>Author</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.Text }}</td>
                <td>{{ comment.Rank }}</td>
                <td>{{ comment.CreatedAt ? comment.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.Author }}</td>
                <td>
                    <a href="{{ path('app_comment_crud_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('app_comment_crud_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comment_crud_new') }}">Create new</a>
{% endblock %}
