{% extends 'base.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block body %}
<div class="container mt-3">
    <h2>Liste des commentaires</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Num√©ro</th>
                <th>Texte</th>
                <th>Rang</th>
                <th>Date</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.Text }}</td>
                <td>{{ comment.Rank }}</td>
                <td>{{ comment.CreatedAt ? comment.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.Author }}</td>
                <td>
                    <a href="{{ path('app_comment_crud_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun commentaire</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comment_crud_new') }}">Nouveau commentaire</a>
</div>
{% endblock %}
