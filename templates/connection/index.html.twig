{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block body %}
<!--Titre-->
<div class="container">
  <div class="row">
    <div class="col"></div>
    <h1 class="text-center">Garage Parrot</h1>
    <div class="col"></div>
  </div>
</div>
<nav class="navbar navbar-expand-lg bg-light">
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/">Accueil</a>
        <a class="nav-item nav-link" href="sales">Nos ventes</a>
        <a class="nav-item nav-link" href="contact">Nous contacter</a>
