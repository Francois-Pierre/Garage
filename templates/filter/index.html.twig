{% block body %}
{% for card in cards %}

<div class="card card-container" data-price="{{ card.Price }}" data-mileage="{{ card.Mileage }}" data-year="{{ card.Year }}">
    
        <img src="{{ asset(card.ImagePath starts with '/' ? card.ImagePath : '/pictures/' ~ card.ImagePath) }}" class="card-img-top" alt="{{ card.ImagePath }}">
        <div class="card-body">
          <h5 class="card-title">{{ card.Title }}</h5>
          <p class="card-text">{{ card.Description }}</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><p>Prix :  {{ card.Price }} euros</p></li>
          <li class="list-group-item"><p>Kilométrage :  {{ card.Mileage }} km</p></li>
          <li class="list-group-item"><p>Année :  {{ card.Year }}</p></li>
          <li class="list-group-item"><a href="{{ path('app_letter_new', {'title': card.Title}) }}">Contacter le vendeur</a></li>
        </ul>
    
</div>

{% endfor %}
{% endblock %}