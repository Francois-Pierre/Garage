{% extends 'base.html.twig' %}
{% block title %}Nos véhicules occasion{% endblock %}
{% block body %}
<div class="container">
<!--Filtre de commentaire-->
        <div class="filters mt-2">

          <label for="price">Prix:</label>
          <input type="number" id="price" class="filter-input" placeholder="Min">
        
          <label for="mileage">Kilomètrage:</label>
          <input type="number" id="mileage" class="filter-input" placeholder="Kilomètres">

          <label for="year">Année de mise en circulation:</label>
          <input type="number" id="year" class="filter-input" placeholder="Année">
          
          <button id="applyFiltersButton">Valider</button>
        </div>
<!--Affichage annonces-->
  <div class="row cartes-container">

    {% include 'filter/index.html.twig' with {'cards': cards} %}
  
  </div>
</div>
<!--Footer-->
<footer>
  <div class="container text-center foot">
      <div class="row">
          <div class="col">
              <p>{{ opening.hours }}</p>
            &copy; 2023 site réalisé dans le cadre d'une évaluation</p>
          </div>
      </div>
  </div>
</footer>
{% endblock %}

