{% extends 'base.html.twig' %}
{% block title %}Nos v√©hicules occasion{% endblock %}
{% block body %}
<!--Creation de commentaire-->
<div class="container">
  <div class="row">
      <h2>Votre annonce</h2>
          {% for card in cards %}
              <div class="card card-container">
                <img src="{{ asset(card.ImagePath starts with '/' ? card.ImagePath : '/pictures/' ~ card.ImagePath) }}" class="card-img-top" alt="{{ card.ImagePath }}">
                <div class="card-body">
                  <h5 class="card-title">{{ card.Title }}</h5>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">{{ card.Price }}</li>
                  <li class="list-group-item">{{ card.Mileage }}</li>
                  <li class="list-group-item">{{ card.Year }}</li>
                </ul>
                <div class="card-body">
                  <a href="#" class="card-link">Card link</a>
                  <a href="#" class="card-link">Another link</a>
                </div>
              </div>
          {% endfor %}

  </div>
</div>
{% endblock %}
